        <div class="blog--posts__wrapper flex--container">
            <% relative_posts.forEach(blog_post=> { %>

                <div class="col--unit__6 post--item">
                    <div class="img--box ">
                        <img src="images/<%= blog_post.image %>" alt="" srcset="">
                        <div class="date--card__wrapper">
                            <div class="date--card">
                                <span class="day">
                                    <%= blog_post.explode_date.jour %>
                                </span>
                                <span class="month ">
                                    <%= blog_post.explode_date.mois %>
                                </span>
                            </div>
                        </div>
                    </div>


                    <div class="post--body">
                        <div class="cat--labels">
                            <% for (let cat__label of blog_post.cat__labels) { %>
                                <span class="category--label">
                                    <%= cat__label %>                               </span>
                                <% } %>
                        </div>

                        <a href="/blog/post?title=<%= blog_post.link_title %>&id=<%= blog_post._id %>">
                            <h4 class="post--title">
                                <%= blog_post.truncate_title %>
                            </h4>
                        </a>

                        <a class="underlined--btn"
                            href="/blog/post?title=<%= blog_post.link_title %>&id=<%= blog_post._id %>">Lire
